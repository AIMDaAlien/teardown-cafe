<style>
  .wave-diffusions {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 320px;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .wave-layer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    will-change: transform;
  }

  /* Layer stacking with slight vertical offset for depth */
  /* ENHANCED animation: More noticeable movement with longer range */
  .wave-layer-1 {
    transform: translateY(0);
    animation: waveFloat1 10s cubic-bezier(0.34, 1.2, 0.64, 1) infinite;
  }

  .wave-layer-2 {
    transform: translateY(8px);
    animation: waveFloat2 12s cubic-bezier(0.34, 1.2, 0.64, 1) infinite 0.8s;
  }

  .wave-layer-3 {
    transform: translateY(16px);
    animation: waveFloat3 14s cubic-bezier(0.34, 1.2, 0.64, 1) infinite 1.6s;
  }

  .wave-layer-4 {
    transform: translateY(24px);
    animation: waveFloat4 16s cubic-bezier(0.34, 1.2, 0.64, 1) infinite 2.4s;
  }

  /* ENHANCED floating animations with MORE NOTICEABLE motion */
  @keyframes waveFloat1 {
    0%, 100% { 
      transform: translateY(0) translateX(0) scaleY(1); 
      opacity: 0.15;
    }
    25% { 
      transform: translateY(-8px) translateX(12px) scaleY(1.02); 
      opacity: 0.18;
    }
    50% { 
      transform: translateY(-12px) translateX(0) scaleY(1.04); 
      opacity: 0.20;
    }
    75% { 
      transform: translateY(-8px) translateX(-12px) scaleY(1.02); 
      opacity: 0.18;
    }
  }

  @keyframes waveFloat2 {
    0%, 100% { 
      transform: translateY(8px) translateX(0) scaleY(1); 
      opacity: 0.12;
    }
    25% { 
      transform: translateY(2px) translateX(-15px) scaleY(1.03); 
      opacity: 0.14;
    }
    50% { 
      transform: translateY(-2px) translateX(0) scaleY(1.05); 
      opacity: 0.16;
    }
    75% { 
      transform: translateY(2px) translateX(15px) scaleY(1.03); 
      opacity: 0.14;
    }
  }

  @keyframes waveFloat3 {
    0%, 100% { 
      transform: translateY(16px) translateX(0) scaleY(1); 
      opacity: 0.08;
    }
    25% { 
      transform: translateY(10px) translateX(18px) scaleY(1.02); 
      opacity: 0.10;
    }
    50% { 
      transform: translateY(6px) translateX(0) scaleY(1.04); 
      opacity: 0.12;
    }
    75% { 
      transform: translateY(10px) translateX(-18px) scaleY(1.02); 
      opacity: 0.10;
    }
  }

  @keyframes waveFloat4 {
    0%, 100% { 
      transform: translateY(24px) translateX(0) scaleY(1); 
      opacity: 0.05;
    }
    25% { 
      transform: translateY(18px) translateX(-20px) scaleY(1.04); 
      opacity: 0.06;
    }
    50% { 
      transform: translateY(14px) translateX(0) scaleY(1.06); 
      opacity: 0.08;
    }
    75% { 
      transform: translateY(18px) translateX(20px) scaleY(1.04); 
      opacity: 0.06;
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .wave-layer {
      animation: none !important;
    }

    .wave-layer-1 { transform: translateY(0); opacity: 0.15; }
    .wave-layer-2 { transform: translateY(8px); opacity: 0.12; }
    .wave-layer-3 { transform: translateY(16px); opacity: 0.08; }
    .wave-layer-4 { transform: translateY(24px); opacity: 0.05; }
  }

  /* Responsive height adjustments */
  @media (max-width: 1024px) {
    .wave-diffusions {
      height: 240px;
    }
  }

  @media (max-width: 768px) {
    .wave-diffusions {
      height: 180px;
    }

    /* Reduce animation intensity on mobile but keep it visible */
    @keyframes waveFloat1 {
      0%, 100% { transform: translateY(0) translateX(0) scaleY(1); }
      50% { transform: translateY(-5px) translateX(0) scaleY(1.02); }
    }

    @keyframes waveFloat2 {
      0%, 100% { transform: translateY(8px) translateX(0) scaleY(1); }
      50% { transform: translateY(4px) translateX(0) scaleY(1.02); }
    }

    @keyframes waveFloat3 {
      0%, 100% { transform: translateY(16px) translateX(0) scaleY(1); }
      50% { transform: translateY(12px) translateX(0) scaleY(1.02); }
    }

    @keyframes waveFloat4 {
      0%, 100% { transform: translateY(24px) translateX(0) scaleY(1); }
      50% { transform: translateY(20px) translateX(0) scaleY(1.02); }
    }
  }
</style>

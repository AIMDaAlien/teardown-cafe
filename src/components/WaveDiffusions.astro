<style>
  .wave-diffusions {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 320px;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .wave-layer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    will-change: transform;
  }

  /* Layer stacking with slight vertical offset for depth */
  .wave-layer-1 {
    transform: translateY(0);
    animation: waveFloat1 12s ease-in-out infinite;
  }

  .wave-layer-2 {
    transform: translateY(8px);
    animation: waveFloat2 14s ease-in-out infinite 1s;
  }

  .wave-layer-3 {
    transform: translateY(16px);
    animation: waveFloat3 16s ease-in-out infinite 2s;
  }

  .wave-layer-4 {
    transform: translateY(24px);
    animation: waveFloat4 18s ease-in-out infinite 3s;
  }

  /* Gentle floating animations for each layer */
  @keyframes waveFloat1 {
    0%, 100% { transform: translateY(0) translateX(0); }
    25% { transform: translateY(-3px) translateX(5px); }
    50% { transform: translateY(-5px) translateX(0); }
    75% { transform: translateY(-3px) translateX(-5px); }
  }

  @keyframes waveFloat2 {
    0%, 100% { transform: translateY(8px) translateX(0); }
    25% { transform: translateY(5px) translateX(-7px); }
    50% { transform: translateY(3px) translateX(0); }
    75% { transform: translateY(5px) translateX(7px); }
  }

  @keyframes waveFloat3 {
    0%, 100% { transform: translateY(16px) translateX(0); }
    25% { transform: translateY(13px) translateX(8px); }
    50% { transform: translateY(11px) translateX(0); }
    75% { transform: translateY(13px) translateX(-8px); }
  }

  @keyframes waveFloat4 {
    0%, 100% { transform: translateY(24px) translateX(0); }
    25% { transform: translateY(21px) translateX(-10px); }
    50% { transform: translateY(19px) translateX(0); }
    75% { transform: translateY(21px) translateX(10px); }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .wave-layer {
      animation: none !important;
    }

    .wave-layer-1 { transform: translateY(0); }
    .wave-layer-2 { transform: translateY(8px); }
    .wave-layer-3 { transform: translateY(16px); }
    .wave-layer-4 { transform: translateY(24px); }
  }

  /* Responsive height adjustments */
  @media (max-width: 1024px) {
    .wave-diffusions {
      height: 240px;
    }
  }

  @media (max-width: 768px) {
    .wave-diffusions {
      height: 180px;
    }

    /* Reduce animation intensity on mobile */
    @keyframes waveFloat1 {
      0%, 100% { transform: translateY(0) translateX(0); }
      50% { transform: translateY(-2px) translateX(0); }
    }

    @keyframes waveFloat2 {
      0%, 100% { transform: translateY(8px) translateX(0); }
      50% { transform: translateY(6px) translateX(0); }
    }

    @keyframes waveFloat3 {
      0%, 100% { transform: translateY(16px) translateX(0); }
      50% { transform: translateY(14px) translateX(0); }
    }

    @keyframes waveFloat4 {
      0%, 100% { transform: translateY(24px) translateX(0); }
      50% { transform: translateY(22px) translateX(0); }
    }
  }
</style>

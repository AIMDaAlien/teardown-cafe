---
// Device SVG Icons - Material You 3 Periwinkle Theme
interface Props {
  type: string;
  class?: string;
}

const { type, class: className = '' } = Astro.props;
---

{type === 'monitor' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="2" y="3" width="20" height="14" rx="1.5" stroke="currentColor" stroke-width="1.5"/>
    <path d="M2 14h20" stroke="currentColor" stroke-width="1.5"/>
    <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    <circle cx="8" cy="8" r="1.5" fill="#00BCD4"/>
    <rect x="11" y="7" width="8" height="1" fill="currentColor" opacity="0.6"/>
    <rect x="11" y="10" width="6" height="1" fill="currentColor" opacity="0.4"/>
  </svg>
)}

{type === 'laptop' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M4 5h16a1 1 0 0 1 1 1v10H3V6a1 1 0 0 1 1-1Z" stroke="currentColor" stroke-width="1.5"/>
    <path d="M2 16h20v2a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-2Z" stroke="currentColor" stroke-width="1.5"/>
    <circle cx="12" cy="17.5" r="0.5" fill="#00BCD4"/>
    <rect x="6" y="8" width="12" height="6" rx="0.5" fill="#1A0B2E" stroke="currentColor" stroke-width="1" opacity="0.6"/>
    <line x1="8" y1="10" x2="14" y2="10" stroke="currentColor" stroke-width="0.5" opacity="0.5"/>
    <line x1="8" y1="12" x2="16" y2="12" stroke="currentColor" stroke-width="0.5" opacity="0.5"/>
  </svg>
)}

{type === 'smartphone' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="6" y="2" width="12" height="20" rx="2" stroke="currentColor" stroke-width="1.5"/>
    <line x1="9" y1="4.5" x2="15" y2="4.5" stroke="currentColor" stroke-width="1" stroke-linecap="round" opacity="0.5"/>
    <rect x="8" y="6" width="8" height="13" rx="0.5" fill="#1A0B2E" stroke="currentColor" stroke-width="0.8" opacity="0.6"/>
    <circle cx="12" cy="20" r="0.8" fill="#00BCD4"/>
    <line x1="9" y1="8" x2="13" y2="8" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
    <line x1="9" y1="10" x2="15" y2="10" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
    <line x1="9" y1="12" x2="14" y2="12" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
  </svg>
)}

{type === 'raspberry-pi' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="4" y="4" width="16" height="16" rx="1.5" stroke="currentColor" stroke-width="1.5"/>
    <rect x="6" y="6" width="12" height="12" rx="0.5" fill="#1A0B2E" stroke="currentColor" stroke-width="1" opacity="0.6"/>
    <circle cx="8" cy="8" r="1" fill="#00BCD4"/>
    <circle cx="16" cy="8" r="1" fill="#00BCD4"/>
    <circle cx="8" cy="16" r="1" fill="#00BCD4"/>
    <circle cx="16" cy="16" r="1" fill="#00BCD4"/>
    <rect x="10" y="10" width="4" height="4" rx="0.3" fill="currentColor" opacity="0.3"/>
    <line x1="12" y1="2" x2="12" y2="4" stroke="currentColor" stroke-width="1"/>
    <line x1="9" y1="3" x2="9" y2="4" stroke="currentColor" stroke-width="0.8"/>
    <line x1="15" y1="3" x2="15" y2="4" stroke="currentColor" stroke-width="0.8"/>
  </svg>
)}

{type === 'nas' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="4" y="3" width="16" height="5" rx="1" stroke="currentColor" stroke-width="1.5"/>
    <rect x="4" y="9.5" width="16" height="5" rx="1" stroke="currentColor" stroke-width="1.5"/>
    <rect x="4" y="16" width="16" height="5" rx="1" stroke="currentColor" stroke-width="1.5"/>
    <circle cx="17" cy="5.5" r="0.8" fill="#00BCD4"/>
    <circle cx="17" cy="12" r="0.8" fill="#00BCD4"/>
    <circle cx="17" cy="18.5" r="0.8" fill="#00BCD4"/>
    <rect x="6" y="4.5" width="8" height="2" rx="0.3" fill="currentColor" opacity="0.3"/>
    <rect x="6" y="11" width="8" height="2" rx="0.3" fill="currentColor" opacity="0.3"/>
    <rect x="6" y="17.5" width="8" height="2" rx="0.3" fill="currentColor" opacity="0.3"/>
  </svg>
)}

{type === 'mechanical-keyboard' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="2" y="6" width="20" height="12" rx="1.5" stroke="currentColor" stroke-width="1.5"/>
    <rect x="4" y="8" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="7" y="8" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="10" y="8" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="13" y="8" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="16" y="8" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="4" y="11" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="7" y="11" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="10" y="11" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="13" y="11" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="16" y="11" width="2" height="2" rx="0.3" fill="currentColor" opacity="0.5"/>
    <rect x="5" y="14" width="10" height="2" rx="0.3" fill="#00BCD4" opacity="0.6"/>
  </svg>
)}

{type === 'other' && (
  <svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M17 3 L21 7 L11 17 L9 19 L7 17 L9 15 Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
    <circle cx="8" cy="16" r="1" fill="currentColor"/>
    <path d="M3 21 L7 17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    <line x1="19" y1="5" x2="17" y2="7" stroke="#00BCD4" stroke-width="1.5" stroke-linecap="round"/>
    <circle cx="19" cy="19" r="3" stroke="currentColor" stroke-width="1.5"/>
    <path d="M18 19 L20 19 M19 18 L19 20" stroke="currentColor" stroke-width="1" stroke-linecap="round"/>
  </svg>
)}

<style>
  svg {
    color: var(--md-sys-color-on-primary-container);
  }
</style>

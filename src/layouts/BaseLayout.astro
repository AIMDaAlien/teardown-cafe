---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A cafe where devices are torn down and analyzed' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
    <title>{title} | Teardown Cafe</title>
  </head>
  <body>
    <header class="site-header">
      <div class="header-content">
        <h1 class="site-title">
          <a href="/">â˜• Teardown Cafe</a>
        </h1>
        <nav class="site-nav">
          <a href="/" class="nav-link">Home</a>
          <a href="/about" class="nav-link">About</a>
        </nav>
      </div>
    </header>
    
    <main class="main-content">
      <slot />
    </main>
    
    <footer class="site-footer">
      <div class="footer-content">
        <p>&copy; {new Date().getFullYear()} Teardown Cafe. Built with Astro.</p>
        <p>Sipping coffee while taking things apart.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-header {
    background-color: var(--md-sys-color-surface-container);
    border-bottom: 1px solid var(--md-sys-color-outline-variant);
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(10px);
  }
  
  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }
  
  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }
  
  .site-title a {
    color: var(--md-sys-color-primary);
    text-decoration: none;
    transition: color var(--md-sys-motion-duration-short) var(--md-sys-motion-easing-standard);
  }
  
  .site-title a:hover {
    color: var(--md-sys-color-on-primary-container);
  }
  
  .site-nav {
    display: flex;
    gap: 1.5rem;
  }
  
  .nav-link {
    color: var(--md-sys-color-on-surface);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: var(--md-sys-shape-corner-full);
    transition: all var(--md-sys-motion-duration-short) var(--md-sys-motion-easing-standard);
  }
  
  .nav-link:hover {
    color: var(--md-sys-color-primary);
    background-color: var(--md-sys-color-surface-container-highest);
  }
  
  .main-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    min-height: calc(100vh - 200px);
  }
  
  .site-footer {
    background-color: var(--md-sys-color-surface-container);
    border-top: 1px solid var(--md-sys-color-outline-variant);
    margin-top: 4rem;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .footer-content p {
    margin: 0;
    color: var(--md-sys-color-on-surface-variant);
  }
  
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .site-nav {
      gap: 1rem;
    }
    
    .footer-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>

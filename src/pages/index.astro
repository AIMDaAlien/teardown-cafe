            <path d="M4 5h16a1 1 0 0 1 1 1v10H3V6a1 1 0 0 1 1-1Z" stroke="currentColor" stroke-width="1.5"/>
            <path d="M2 16h20v2a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-2Z" stroke="currentColor" stroke-width="1.5"/>
            <rect x="6" y="8" width="12" height="6" rx="0.5" fill="#1A0B2E" stroke="currentColor" stroke-width="1" opacity="0.6"/>
            <circle cx="12" cy="17.5" r="0.5" fill="#00BCD4"/>
          </svg>
          <h3>Laptops</h3>
          <p>Ultrabooks, gaming machines, and everything in between</p>
        </a>
        <a href="/device/3d-printer" class="device-card">
          <svg class="device-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="4" y="3" width="16" height="2" rx="1" stroke="currentColor" stroke-width="1.5"/>
            <path d="M6 5v14h12V5" stroke="currentColor" stroke-width="1.5"/>
            <rect x="8" y="15" width="8" height="4" rx="0.5" fill="currentColor" opacity="0.3"/>
            <path d="M10 7h4v6h-4z" stroke="currentColor" stroke-width="1.2" fill="#1A0B2E" opacity="0.6"/>
            <circle cx="12" cy="9" r="1" fill="#00BCD4"/>
            <line x1="10" y1="20" x2="14" y2="20" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
          <h3>3D Printers</h3>
          <p>Setup, calibration, and hardware analysis</p>
        </a>
        <a href="/device/raspberry-pi" class="device-card">
          <svg class="device-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="4" y="4" width="16" height="16" rx="1.5" stroke="currentColor" stroke-width="1.5"/>
            <rect x="6" y="6" width="12" height="12" rx="0.5" fill="#1A0B2E" stroke="currentColor" stroke-width="1" opacity="0.6"/>
            <circle cx="8" cy="8" r="1" fill="#00BCD4"/>
            <circle cx="16" cy="8" r="1" fill="#00BCD4"/>
            <circle cx="8" cy="16" r="1" fill="#00BCD4"/>
            <circle cx="16" cy="16" r="1" fill="#00BCD4"/>
            <rect x="10" y="10" width="4" height="4" rx="0.3" fill="currentColor" opacity="0.3"/>
          </svg>
          <h3>Raspberry Pi</h3>
          <p>SBC builds, modifications, and projects</p>
        </a>
        <a href="/device/nas" class="device-card">

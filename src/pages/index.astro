            <rect x="4" y="3" width="16" height="5" rx="1" stroke="currentColor" stroke-width="1.5"/>
            <rect x="4" y="9.5" width="16" height="5" rx="1" stroke="currentColor" stroke-width="1.5"/>
            <rect x="4" y="16" width="16" height="5" rx="1" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="17" cy="5.5" r="0.8" fill="#00BCD4"/>
            <circle cx="17" cy="12" r="0.8" fill="#00BCD4"/>
            <circle cx="17" cy="18.5" r="0.8" fill="#00BCD4"/>
            <rect x="6" y="4.5" width="8" height="2" rx="0.3" fill="currentColor" opacity="0.3"/>
          </svg>
          <h3>NAS & Storage</h3>
          <p>Network storage and homelab setups</p>
        </a>
        <a href="/device/smartphone" class="device-card">
